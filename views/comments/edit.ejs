<% include ../partials/header %>
<div class ="container">
    <div class="row">
        <h1 style="text-align: center;"> Edit Comment </h1>
        <div style="width:30%; margin: 25px auto;">
            <form method="post" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT">
